<%- include("partials/header") -%>

<section class="mb-4">
  <div class="contact-box">

    <!--Section heading-->
    <div class="mobile-h2">
      <h2 class="text-center my-4">Contact us</h2>
    </div>

    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5 message-text">Do you have any questions? Please do not hesitate to contact us directly. Our team will respond as quickly as possible.</p>
    <div class="row">
      <div class="col-lg-9 col-md-12 mb-md-0 mb-5">
        <form id="contact-form" name="contact-form" action="https://formsubmit.co/a9829b208898052496bb4e432dbdc314 " method="POST">
          <!-- Honeypot -->
          <input type="text" name="_honey" style="display: none;">

          <!-- Disable Captcha -->
          <input type="hidden" name="_captcha" value="false">

          <div class="row">

            <div class="col-md-12 form-component">
              <div class="md-form mb-0">
                <label for="name" class="">First and Last Name</label>
                <input type="text" id="name" name="Name" class="form-control">
              </div>
            </div>
            <div class="col-md-12 form-component">
              <div class="md-form mb-0">
                <label for="email" class="">Email Address</label>
                <input type="text" id="email" name="Email" class="form-control">
              </div>
            </div>
            <div class="col-md-12 form-component">
              <div class="md-form mb-0">
                <label for="name" class="">Property Type</label>
                <input type="text" id="property" name="PropertyType" class="form-control">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-component">
              <div class="md-form mb-0">
                <label for="subject" class="">Property Guest Capacity</label>
                <input type="text" id="capacity" name="GuestCapacity" class="form-control">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-component">
              <div class="md-form mb-0">
                <label for="subject" class="">Link to Property Listing</label>
                <input type="text" id="link" name="Link" class="form-control">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 form-component">
              <div class="md-form">
                <label for="message">Your message</label>
                <textarea type="text" id="message" name="Message" rows="2" class="form-control md-textarea"></textarea>
              </div>
            </div>
          </div>
        </form>

        <div class="text-center text-md-left submit-button">
          <a class="btn btn-dark w-100 d-block" onclick="document.getElementById('contact-form').submit();">Send</a>
        </div>
        <div class="status"></div>
      </div>
      <div class="text-center contact-contacts col-lg-3">
        <ul class="list-unstyled mb-0">
          <li><i class="fas fa-map-marker-alt fa-2x"></i>
            <p>Eastern Minnesota / Western Wisconsin</p>
          </li>

          <li><i class="fas fa-phone mt-4 fa-2x"></i>
            <p>715-781-8007</p>
          </li>
          <li><i class="fas fa-envelope mt-4 fa-2x"></i>
            <p>info@upcyse.com</p>
          </li>
        </ul>
      </div>
    </div>

  </div>
</section>



<%- include("partials/footer") -%>
